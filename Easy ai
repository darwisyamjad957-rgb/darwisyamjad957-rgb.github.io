<body>

<div class="container">
    <h2>Generate Your AI Photo</h2>

    <!-- Auto-expand textarea -->
    <textarea id="prompt" placeholder="Describe your photo..." rows="2"></textarea>

    <!-- select & button -->
    <div class="select-and-button">
        <select id="style">
            <option value="">Select style (optional)</option>
            <option value="realistic">Realistic</option>
            <option value="cartoon">Cartoon</option>
            <option value="painting">Painting</option>
        </select>

        <button id="generateBtn" onclick="generate()">Generate</button>
    </div>

    <div id="result"></div>
    <a id="downloadBtn" download="AI_Photo.png">Download Photo</a>
</div>

<script>

/* ===============================
   ANTI-NUDITY / ANTI-PORN FILTER
================================= */
const bannedWords = [
 "nude","naked","bogel","sex","porn","lucah",
 "boobs","breast","pussy","vagina","penis","fuck",
 "cock","cum","blowjob","nipple","fetish","69"
];

function containsBannedWords(text) {
    return bannedWords.some(word => 
        text.toLowerCase().includes(word)
    );
}

/* ===============================
   AUTO-EXPAND TEXTAREA
================================= */
const promptBox = document.getElementById("prompt");
promptBox.addEventListener("input", function () {
    this.style.height = "auto";
    this.style.height = (this.scrollHeight) + "px";
});

/* ===============================
   GENERATE FUNCTION
================================= */
function generate() {
    let prompt = document.getElementById("prompt").value.trim();
    let style = document.getElementById("style").value;
    let result = document.getElementById("result");
    let downloadBtn = document.getElementById("downloadBtn");

    // ⛔ BLOCK PROMPT LUCAH
    if (containsBannedWords(prompt)) {
        alert("⚠️ Prompt ini mengandungi perkataan tidak dibenarkan.\nSila gunakan prompt yang sopan.");
        return;
    }

    if (prompt === "") {
        alert("Please describe your photo before generating.");
        return;
    }

    result.innerHTML = '<div class="loader"></div><div id="loadingText">Generating your AI photo...</div>';
    downloadBtn.style.display = "none";

    let finalPrompt = prompt + (style ? `, ${style} style` : "");
    let url = "https://image.pollinations.ai/prompt/" + encodeURIComponent(finalPrompt) + "?rand=" + Date.now();

    let img = new Image();
    img.src = url;
    img.alt = "AI Photo";

    img.onload = function() {
        result.innerHTML = '';
        result.appendChild(img);
        downloadBtn.href = url;
        downloadBtn.style.display = "block";
    }

    img.onerror = function() {
        result.innerHTML = '<div style="text-align:center;color:red;">Failed to generate photo. Try again.</div><img src="https://via.placeholder.com/512x512?text=No+Image" alt="Placeholder">';
        downloadBtn.style.display = "none";
    }
}
</script>

